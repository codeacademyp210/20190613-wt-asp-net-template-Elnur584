@model BemaxWeekendTask.Models.HomeVM

@{
    ViewBag.Title = "Ana Sehife";
}

@Html.Partial("_SliderPartialView", Model)
<!-- Hire us -->
<section>
    <div class="section-wrapper bg-blue">
        <div class="hire-us">
            <div class="container">
                <div class="hire-us-container">
                    <div class="hire-us-text m-b-2">
                        <p>
                            We’ve completed more than
                            <span>100+</span>project for our amazing clients, If you interested?
                        </p>
                    </div>
                    <div class="hire-us-button">
                        <a href="#">Hire Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hire Us -->
<!-- Icon box -->
<section>
    <div class="section-wrapper">
        <div class="container py-50">
            <div class="row justify-content-center">
                @foreach (var item in Model.IconBoxes)
                {
                    <div class="col-lg-4 col-md-8">
                        <div class="iconbox iconbox-style-1">
                            <div class="iconbox-container">
                                <div class="iconbox-image">
                                    <img src="~/Public/images/@item.Photo" alt="Image 1">
                                </div>
                                <div class="iconbox-content">
                                    <h4 class="iconbox-content-heading">
                                        <i class="fa fa-bar-chart"></i>
                                        @item.Title
                                        @*Top Investment Advisors*@
                                    </h4>
                                    <div class="iconbox-content-body">
                                        <p>
                                            @item.Content
                                        </p>
                                        <a href="#">
                                            <i class="fa fa-plus-square"></i>Read more
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }              
            </div>
        </div>
    </div>
</section>
<!-- End Icon box -->
<!-- Icon box -->
<section>
    <div class="section-wrapper bg-gray p-t-62 p-b-45">
        <div class="container">
            <div class="section-title">
                <h3>We are bemax</h3>
                <div class="title-border m-b-67"></div>
            </div>
            <div class="row">
                @foreach (var item in Model.weAreBemaxAreas)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="iconbox iconbox-style-2">
                            <div class="iconbox-container">
                                <div class="iconbox-image">
                                    <a href="@item.Link">
                                        <i class="@item.Icon"></i>
                                    </a>
                                </div>
                                <div class="iconbox-content">
                                    <a href="@item.Link" class="iconbox-content-heading">@item.LinkTitle</a>
                                    <div class="icon-content-body">
                                        <p>@item.IconAreaContent</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<!-- End Iconbox -->
<!-- Latest BLog-->
<section>
    <div class="section-wrapper bg-black-1 p-t-70 p-b-80">
        <div class="container">
            <div class="section-title section-title-style-1">
                <h3>Latest Projects</h3>
                <div class="title-border m-b-67"></div>
            </div>
            <div class="owl-carousel js-owl-nav owl-nav-1" data-items="4" data-loop="true" data-responsive='{"0":{"items":"1"},"576":{"items":"2"},"768":{"items":"3"},"992":{"items":"4"}}'>
                @foreach (var item in Model.miniSliders)
                {
                    <div class="project">
                        <div class="project-container">
                            <div class="project-image">
                                <img src="~/Public/images/@item.Photo" alt="Project 1">
                            </div>
                            <div class="project-content">
                                <div class="project-content-body">
                                    <a href="#" class="project-title">@item.MainTitle</a>
                                    <div class="project-label">
                                        <a href="#">@item.Link</a>
                                        <a href="#">@item.LinkContent</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
              
            </div>
        </div>
    </div>
</section>
<!-- End Latest Blog -->
<!-- Why Choose Us -->
<section>
    <div class="section-wrapper p-t-62 p-b-95">
        <div class="container">
            <div class="section-title">
                <h3>Why Choose Us</h3>
                <div class="title-border m-b-46"></div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="video p-t-10">
                        <div class="video-image-thumbnail">
                            <img src="~/Public/images//video_01.jpg" alt="Video">
                        </div>
                        <div class="video-play">
                            <a href="https://www.youtube.com/embed/keDneypw3HY?autoplay=1">
                                <i class="fa fa-play"></i>
                            </a>
                        </div>
                        <div class="play-video">
                            <iframe name="showvideo" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 p-r-5">
                    @foreach (var item in Model.whyChooseUsAreas)
                    {
                        <div class="iconbox iconbox-style-3">
                            <div class="iconbox-container">
                                <div class="iconbox-content">
                                    <a href="#" class="iconbox-content-heading">
                                        <i class="@item.WhyChooseIcon"></i>@item.IconTitle
                                    </a>
                                    <div class="iconbox-content-body">
                                        <p>@item.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                  
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Why Choose us -->
<!-- Hire Us -->
<section>
    <div class="section-wrapper bg-gray">
        <div class="hire-us hire-us-style-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="hire-us-container">
                            <div class="section-title">
                                <h3>Working With us</h3>
                                <div class="title-border m-b-30"></div>
                            </div>
                            <div class="hire-us-text">
                                <p>@Model.working.Content</p>
                            </div>
                            <div class="hire-us-button">
                                <a href="#">Hire Us</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="hire-us-image">
                            <img src="~/Public/images/@Model.working.Photo" alt="Image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hire Us -->
<!-- Latest Blog + Testimonial -->
<section>
    <div class="section-wrapper py-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-title justify-content-start js-owl-nav-1">
                        <h3 class="text-left">
                            Latest blog Posts
                            <span class="au-owl-prev">
                                <i class="fa fa-angle-left"></i>
                            </span>
                            <span class="au-owl-next">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </h3>
                        <div class="title-border m-b-10"></div>
                        <div class="owl-carousel" data-items="1" data-loop="true">
                            @foreach (var item in Model.LatestBlogPost)
                            {
                                <div class="blog">
                                    <div class="blog-container">
                                        <div class="blog-image">
                                            <div class="blog-image-container">
                                                <img src="~/Public/images/@item.Photo" alt="Blog">
                                                <span class="blog-date">
                                                    @item.PostDate
                                                </span>
                                            </div>
                                        </div>
                                        <div class="blog-content">
                                            <a href="#" class="blog-content-title">@item.PostTitle</a>
                                            <p class="blog-content-text">@item.PostContent</p>
                                            <div class="blog-button">
                                                <div class="blog-tags">
                                                    <i class="fa fa-tags"></i>
                                                    <a href="#">@item.IconTitle</a>,
                                                    <a href="#"></a>
                                                </div>
                                                <div class="blog-readmore">
                                                    <a href="#">
                                                        <i class="@item.PostIcon"></i>@item.PostTitle2
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                          
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="section-title justify-content-start js-owl-nav-1">
                        <h3 class="text-left">
                            Testimonials
                            <span class="au-owl-prev">
                                <i class="fa fa-angle-left"></i>
                            </span>
                            <span class="au-owl-next">
                                <i class="fa fa-angle-right"></i>
                            </span>
                        </h3>
                        <div class="title-border m-b-27"></div>
                        <div class="owl-carousel" data-items="1" data-loop="true">
                            @foreach (var item in Model.testimonial)
                            {
                                <div class="testimonial testi-style-1">
                                    <div class="testi-container">
                                        <div class="testi-content">
                                            <p>@item.Content</p>
                                        </div>
                                        <div class="testi-author">
                                            <div class="testi-author-image">
                                                <img src="~/Public/images/@item.Photo" alt="Alex">
                                            </div>
                                            <div class="testi-author-content">
                                                <a href="#" class="testi-author-name">@item.ProfileTitle</a>
                                                <p class="testi-author-job">@item.ProfileContent</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Latest Blog -->
<!-- Partner -->
<section>
    <div class="section-wrapper bg-gray-1 py-50">
        <div class="container">
            <div class="owl-carousel" data-responsive='{"0":{"items":"1"},"576":{"items":"2"},"768":{"items":"3"},"992":{"items":"4"},"1200":{"items":"6"}}'>
                @foreach (var item in Model.TestimonialsBodies)
                {
                    <div class="partner">
                        <img src="~/Public/images/@item.Photo" alt="Partner 01">
                    </div>
                }
              
            </div>
        </div>
    </div>
</section>
<!-- End Partner -->
